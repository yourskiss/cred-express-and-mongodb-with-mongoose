<!DOCTYPE html>
<html>
<head>
  <title>Change Password</title>
</head>
<body>
<%- include('partials/header') %>
<section class="sectionmin">
  <h1  class="mainheading">Change Password</h1>
 
  <form class="formpart" action="/teachers/change-password" method="post">
    <% if (error) { %>
      <aside class="errormessage"><%= error %></aside>
    <% } %>
    <% if (success) { %>
      <aside class="successmessage">
        <%= success %>
      </aside>
      <script>
        setTimeout(() => {
          window.location.href = '/teachers/dashboard';
        }, 2000); 
      </script>
    <% } %>
  
  <div>
    <label>Old Password:</label>
    <input type="text" name="oldpassword" value="<%= data.oldpassword || '' %>" />
  </div>
  <div>
    <label>New Password:</label>
    <input type="text" name="newpassword" value="<%= data.newpassword || '' %>" />
  </div>
  <div>
    <label>Confirm Password:</label>
    <input type="text" name="confirmpassword" value="<%= data.confirmpassword || '' %>" />
  </div>
  <div>
    <button type="submit">Change</button>
  </div>
</form>

</section>
<%- include('partials/footer', { title: 'EMP Management System' }) %>
</body>
</html>
