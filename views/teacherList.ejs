<!DOCTYPE html>
<html>
<head>
  <title>Teacher List</title>

</head>
<body>
<%- include('partials/header') %>
<section class="sectionmin">
  <h1 class="mainheading">All List</h1>
    <% result.forEach((res) => { %>
        <div style="border: 1px solid #ccc; padding:5px 10px ; margin-bottom: 10px; width: 100%; display: flex; justify-content: space-between;">
            <p>
                <strong>Full Name:</strong> <%= res.fullname %> <br> 
                <strong>Mobile:</strong> <%= res.mobile %><br> 
                <strong>Email:</strong> <%= res.email %><br>
                <strong>Password:</strong> <%= res.password %><br>
                <strong>Created At:</strong> <%= new Date(res.createdAt).toLocaleString() %><br>
                <% if (res.createdAt.getTime() < res.updatedAt.getTime()) { %>
                  <strong>Updated At:</strong> <%= new Date(res.updatedAt).toLocaleString() %><br>
                <% } %>
            </p>
            <div style="width: 150px; display: flex; justify-content: flex-end; gap: 10px; align-items:flex-start;">
                <a href="/teachers/detail/<%= res.id %>" class="btn">View </a>  
                <a href="/teachers/update/<%= res.id %>" class="btn">Update </a>  
                <form action="/teachers/delete/<%= res._id %>" method="POST" style="display: inline; margin: 0; padding: 0; width: auto;" onsubmit="return confirm('Are you sure you want to delete this teacher?')">
                  <button type="submit" class="btn btn-delete">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
</section>
<%- include('partials/footer', { title: 'EMP Management System' }) %>
</body>
</html>
