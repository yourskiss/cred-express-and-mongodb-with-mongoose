<!DOCTYPE html>
<html>
<head>
  <title>Add Teacher</title>
</head>
<body>
<%- include('partials/header') %>
<section class="sectionmin">
  <h1  class="mainheading">Login</h1>
 
  <form class="formpart" action="/teachers/login" method="post">
    <% if (error) { %>
      <aside class="errormessage"><%= error %></aside>
    <% } %>
    <% if (success) { %>
      <aside class="successmessage"><%= success %></aside>
      <script>
        setTimeout(() => {
          window.location.href = "/teachers/dashboard";
        }, 2000); 
      </script>
    <% } %>
    <div>
        <label>Email:</label>
        <input 
            type="test" 
            name="email" 
            value="<%= email || '' %>"
        />
    </div>
        <div>
        <label>Password:</label>
        <input 
            type="text" 
            name="password" 
        />
    </div>
    <div>
      <button type="submit">Login</button>
    </div>
  </form>
</section>
<%- include('partials/footer', { title: 'EMP Management System' }) %>
</body>
</html>
